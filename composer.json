{
  "name": "magento-hackathon/BigDataImport",
  "license": "OSL-3.0",
  "type": "magento-module",
  "description": "BigDataImport for Magento",

  "require": {
    "php": ">=5.4.0",
    "magento-hackathon/magento-composer-installer": "dev-master"
  },

  "require-dev": {
    "ecomdev/mage-ci": "*",
    "ecomdev/ecomdev_phpunit": "dev-dev",
    "satooshi/php-coveralls": "dev-master",
    "phpunit/php-code-coverage": "2.0.15",
    "ho-nl/ho_import": "dev-master",
    "avstudnitz/fast-simple-import": "dev-develop",
    "phpunit/phpcov": "*"
  },

  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    }
  ],

  "config": {
    "bin-dir": "bin"
  },

  "extra": {
    "magento-root-dir": "build",
    "magento-force": true
  }

}
